.cell {
  margin-bottom: 30rpx;
}
.cell .book {
  width: 100%;
  height: 300rpx;
  display: flex;
}
.cell .book .image {
  flex: 1;
}
.cell .book .image image {
  width: 200rpx;
  margin: 20rpx;
}
.cell .book .about {
  flex: 3;
  display: flex;
  flex-direction: column;
}
.cell .book .about .name {
  font-size: 20px;
  padding: 20rpx;
  color: #3b3a3a;
  flex: 1;
}
.cell .book .about .star {
  flex: 1;
}
.cell .book .about .star text {
  font-size: 20px;
  padding: 20rpx;
  color: #ffd21e;
}
.cell .book .about .author {
  font-size: 12px;
  padding: 20rpx;
  color: #817070;
  flex: 1;
}
.news {
  display: flex;
  height: 160rpx;
}
.news .word {
  background-color: #f3f3f3;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.news .word .number {
  text-align: center;
  line-height: 80rpx;
  flex: 1;
  color: #817070;
}
.news .word .class {
  text-align: center;
  line-height: 80rpx;
  flex: 1;
  font-size: 16px;
  color: #817070;
}
.news .ratio {
  background-color: #f3f3f3;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.news .ratio .number {
  text-align: center;
  line-height: 80rpx;
  flex: 1;
  color: #817070;
}
.news .ratio .class {
  text-align: center;
  line-height: 80rpx;
  flex: 1;
  font-size: 16px;
  color: #817070;
}
.news .follower {
  background-color: #f3f3f3;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.news .follower .number {
  text-align: center;
  line-height: 80rpx;
  flex: 1;
  color: #817070;
}
.news .follower .class {
  text-align: center;
  line-height: 80rpx;
  flex: 1;
  font-size: 16px;
  color: #817070;
}
.cell {
  margin-bottom: 150rpx;
}
.cell .review .title {
  display: flex;
}
.cell .review .title .nickname {
  flex: 2;
}
.cell .review .title .updated {
  flex: 1;
}
.none {
  font-size: 30px;
  text-align: center;
  margin-top: 50rpx;
  margin-bottom: 150rpx;
  color: #ccc;
}
